@model IEnumerable<Station>

@{
    ViewData["Title"] = "Stations";
    var name = ViewBag.Name as string;
    var location = ViewBag.Location as string;
    var isActive = ViewBag.IsActive as bool?;
    var pageNumber = ViewBag.PageNumber ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
    var totalPages = ViewBag.TotalPages ?? 1;
    var hasPreviousPage = ViewBag.HasPreviousPage ?? false;
    var hasNextPage = ViewBag.HasNextPage ?? false;
    var totalCount = ViewBag.TotalCount ?? 0;
}

<h1>Stations</h1>

<div class="card mb-3">
    <div class="card-body">
        <form id="searchForm" class="row g-3">
            <div class="col-md-3">
                <label for="searchName" class="form-label">Tên trạm</label>
                <input type="text" class="form-control" id="searchName" name="name" value="@name" placeholder="Nhập tên hoặc mã trạm">
            </div>
            <div class="col-md-3">
                <label for="searchLocation" class="form-label">Địa điểm</label>
                <input type="text" class="form-control" id="searchLocation" name="location" value="@location" placeholder="Nhập địa chỉ, thành phố">
            </div>
            <div class="col-md-2">
                <label for="searchIsActive" class="form-label">Trạng thái</label>
                <select class="form-select" id="searchIsActive" name="isActive">
                    <option value="">Tất cả</option>
                    <option value="true" selected="@(isActive == true)">Active</option>
                    <option value="false" selected="@(isActive == false)">Inactive</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="pageSize" class="form-label">Số lượng/trang</label>
                <select class="form-select" id="pageSize" name="pageSize">
                    <option value="10" selected="@(pageSize == 10)">10</option>
                    <option value="20" selected="@(pageSize == 20)">20</option>
                    <option value="50" selected="@(pageSize == 50)">50</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="button" class="btn btn-secondary w-100" id="clearSearch">Xóa</button>
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Station</a>
</p>

<div id="loadingIndicator" class="text-center" style="display: none;">
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<div id="stationsTable">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.StationCode)</th>
                <th>@Html.DisplayNameFor(model => model.StationName)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.City)</th>
                <th>@Html.DisplayNameFor(model => model.Capacity)</th>
                <th>@Html.DisplayNameFor(model => model.CurrentAvailable)</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="stationsTableBody">
            @foreach (var item in Model)
            {
                <tr data-station-id="@item.StationId">
                    <td>@Html.DisplayFor(modelItem => item.StationCode)</td>
                    <td>@Html.DisplayFor(modelItem => item.StationName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                    <td>@Html.DisplayFor(modelItem => item.CurrentAvailable)</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.StationId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.StationId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.StationId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (totalCount > 0)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                <a class="page-link" href="#" data-page="@(pageNumber - 1)" @(!hasPreviousPage ? "tabindex=\"-1\" aria-disabled=\"true\"" : "")>Previous</a>
            </li>
            @for (int i = Math.Max(1, pageNumber - 2); i <= Math.Min(totalPages, pageNumber + 2); i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link" href="#" data-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(!hasNextPage ? "disabled" : "")">
                <a class="page-link" href="#" data-page="@(pageNumber + 1)" @(!hasNextPage ? "tabindex=\"-1\" aria-disabled=\"true\"" : "")>Next</a>
            </li>
        </ul>
    </nav>
    <div class="text-center text-muted">
        Hiển thị @((pageNumber - 1) * pageSize + 1) - @(Math.Min(pageNumber * pageSize, totalCount)) trong tổng số @totalCount trạm
    </div>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        const signalRHubUrl = 'https://localhost:7176/stationHub';
    </script>
    <script src="~/js/station.js" asp-append-version="true"></script>
}
